<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0073C3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="射孔取心工培训考试系统"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_index_menu" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_index_image"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/index_sequence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            >
            <ImageView
                android:id="@+id/iv_ShunXu"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_index_sequence"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_ShunXu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="顺序练习"
                android:textSize="20sp"
                android:gravity="center"

                />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000"
            />
        <LinearLayout
            android:id="@+id/index_random"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            >
            <ImageView
                android:id="@+id/iv_SuiJi"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_index_random"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_SuiJi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="随机练习"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/index_strengthen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            >
            <ImageView
                android:id="@+id/iv_Qianghua"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_index_strengthen"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_QiangHua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="强化练习"
                android:textSize="20sp"
                android:gravity="center"

                />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000"
            />
        <LinearLayout
            android:id="@+id/index_simulation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            >
            <ImageView
                android:id="@+id/iv_KaoShi"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_index_simulation"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_KaoShi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="模拟考试"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>